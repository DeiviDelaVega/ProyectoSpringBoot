                    <td th:text="${reserva.cliente}"></td>
                    <td th:text="${reserva.inmueble.nombre}"></td>
                    <td th:text="${reserva.fechaInicio}"></td>
                    <td th:text="${reserva.fechaFin}"></td>
                    <td>
                        <a th:href="@{'/reservas/editar/' + ${reserva.id}}" class="btn btn-primary btn-sm">Editar</a>
                        <a th:href="@{'/reservas/eliminar/' + ${reserva.id}}" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            </tbody>
        </table>

        <!-- Paginación -->
        <nav>
            <ul class="pagination">
                <li th:each="i : ${#numbers.sequence(1, totalPaginas)}" class="page-item" 
                    th:classappend="${i == paginaActual} ? 'active'">
                    <a class="page-link" th:href="@{'/reservas?pagina=' + ${i} + '&cliente=' + ${clienteSeleccionado}}" th:text="${i}"></a>
