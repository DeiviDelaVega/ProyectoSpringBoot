        <form method="get" th:action="@{/reservas}" class="mb-3">
            <label for="cliente">Filtrar por Cliente:</label>
            <select name="cliente" id="cliente" class="form-select" onchange="this.form.submit()">
                <option value="">-- Todos --</option>
                <option th:each="cliente : ${clientes}" th:value="${cliente}" th:text="${cliente}" 
                        th:selected="${clienteSeleccionado == cliente}"></option>
