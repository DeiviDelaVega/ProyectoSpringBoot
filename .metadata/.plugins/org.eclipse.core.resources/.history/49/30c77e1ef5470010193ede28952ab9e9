<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Reservas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Gestión de Reservas</a>
    </div>
</nav>

<div class="container">
    <h2 class="mb-4">Listado de Reservas</h2>

    <!-- Filtro por fechas -->
    <form class="row g-3 mb-4" th:action="@{/reservas}" method="get">
        <div class="col-md-4">
            <label for="fechaInicio" class="form-label">Fecha Inicio</label>
            <input type="date" class="form-control" id="fechaInicio" name="fechaInicio"
                   th:value="${fechaInicioSeleccionada}">
        </div>

        <div class="col-md-4">
            <label for="fechaFin" class="form-label">Fecha Fin</label>
            <input type="date" class="form-control" id="fechaFin" name="fechaFin"
                   th:value="${fechaFinSeleccionada}">
        </div>

        <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">Filtrar</button>
            <a class="btn btn-secondary" th:href="@{/reservas}">Limpiar</a>
        </div>
    </form>

    <!-- Tabla de reservas -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Cliente</th>
                    <th>Inmueble</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Fin</th>
                    <th>Monto Total</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr th:each="reserva : ${reservas.content}">
                    <td th:text="${reserva.id}"></td>
                    <td th:text="${reserva.cliente.nombre + ' ' + reserva.cliente.apellido}"></td>
                    <td th:text="${reserva.inmueble.nombre}"></td>
                    <td th:text="${#temporals.format(reserva.fechaInicio, 'dd-MM-yyyy')}"></td>
                    <td th:text="${#temporals.format(reserva.fechaFin, 'dd-MM-yyyy')}"></td>
                    <td th:text="${#numbers.formatDecimal(reserva.montoTotal, 1, 'COMMA', 2, 'POINT')}"></td>
                    <td th:text="${reserva.estadoReserva}"></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <nav th:if="${reservas.totalPages > 1}">
        <ul class="pagination justify-content-center">
            <li class="page-item" th:classappend="${reservas.first} ? 'disabled'">
                <a class="page-link" th:href="@{/reservas(page=${reservas.number - 1}, fechaInicio=${fechaInicioSeleccionada}, fechaFin=${fechaFinSeleccionada})}">Anterior</a>
            </li>
            <li class="page-item" th:each="i : ${#numbers.sequence(0, reservas.totalPages - 1)}"
                th:classappend="${i == reservas.number} ? 'active'">
                <a class="page-link"
                   th:href="@{/reservas(page=${i}, fechaInicio=${fechaInicioSeleccionada}, fechaFin=${fechaFinSeleccionada})}"
                   th:text="${i + 1}">1</a>
            </li>
            <li class="page-item" th:classappend="${reservas.last} ? 'disabled'">
                <a class="page-link" th:href="@{/reservas(page=${reservas.number + 1}, fechaInicio=${fechaInicioSeleccionada}, fechaFin=${fechaFinSeleccionada})}">Siguiente</a>
            </li>
        </ul>
    </nav>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
