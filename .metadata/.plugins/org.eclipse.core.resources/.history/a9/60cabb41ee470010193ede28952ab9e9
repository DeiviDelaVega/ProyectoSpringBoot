<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Lista de Reservas</title>
</head>
<body>
<h1>Reservas</h1>

<form th:action="@{/reservas}" method="get">
    <label>Cliente:</label>
    <select name="clienteId">
        <option value="">-- Todos --</option>
        <option th:each="cliente : ${clientes}"
                th:value="${cliente.idCliente}"
                th:text="${cliente.nombre + ' ' + cliente.apellido}"
                th:selected="${cliente.idCliente == clienteSeleccionado}">
        </option>
    </select>

    <label>Fecha Inicio:</label>
    <input type="date" name="fechaInicio" th:value="${fechaSeleccionada}"/>

    <button type="submit">Filtrar</button>
</form>

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Inmueble</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto Total</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        <tr th:each="reserva : ${reservas}">
            <td th:text="${reserva.id}"></td>
            <td th:text="${reserva.cliente.nombre + ' ' + reserva.cliente.apellido}"></td>
            <td th:text="${reserva.inmueble.nombre}"></td>
            <td th:text="${reserva.fechaInicio}"></td>
            <td th:text="${reserva.fechaFin}"></td>
            <td th:text="${reserva.montoTotal}"></td>
            <td th:text="${reserva.estadoReserva}"></td>
        </tr>
    </tbody>
</table>

</body>
</html>
