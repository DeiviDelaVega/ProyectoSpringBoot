package com.polo.webreservas.service;

import java.time.LocalDate;
import java.util.List;
import com.polo.webreservas.model.Reserva;

public interface ReservaService {
    List<Reserva> listarTodas();
    Reserva guardar(Reserva reserva);
    Reserva buscarPorId(Integer id);
    List<Reserva> filtrarPorClienteYFecha(Integer idCliente, LocalDate fechaInicio);
    List<Reserva> buscarPorCliente(Integer idCliente);
    List<Reserva> buscarPorFechaInicio(LocalDate fechaInicio);
}
